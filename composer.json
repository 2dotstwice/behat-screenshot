{
    "name": "bex/behat-screenshot",
    "type": "library",
    "description": "Extension for behat to help debug failing scenarios",
    "keywords": ["tdd","bdd","behat"],
    "homepage": "https://github.com/elvetemedve/behat-screenshot",
    "license": "MIT",
    "authors": [
        {
            "name": "Tibor Kotosz",
            "email": "kotosy@gmail.com",
            "homepage": "https://github.com/tkotosz",
            "role": "Developer"
        },
        {
            "name": "Geza Buza",
            "email": "bghome@gmail.com",
            "homepage": "https://twitter.com/medve540",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : ">=5.4",
        "behat/behat" : "^3.0.0",
        "behat/mink-extension" : "^2.0.0",
        "symfony/filesystem": "^2.7",
        "kriswallsmith/buzz": "^0.15.0",
        "bex/behat-extension-driver-locator": "dev-master",
        "bex/behat-screenshot-image-driver-uploadpie": "dev-master",
        "bex/behat-screenshot-image-driver-img42": "dev-master",
        "bex/behat-screenshot-image-driver-unsee": "dev-master",
        "bex/behat-test-runner": "dev-master"
    },
    "require-dev": {
        "phpspec/phpspec" : "2.4.0-alpha2",
        "jakoch/phantomjs-installer": "^1.9.8",
        "behat/mink-selenium2-driver": "^1.3.0"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:tkotosz/behat-extension-driver-locator.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:tkotosz/behat-screenshot-image-driver-uploadpie.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:tkotosz/behat-screenshot-image-driver-img42.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:tkotosz/behat-screenshot-image-driver-unsee.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:elvetemedve/behat-test-runner.git"
        }
    ],
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-0": {
            "": "src"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "PhantomInstaller\\Installer::installPhantomJS"
        ],
        "post-update-cmd": [
            "PhantomInstaller\\Installer::installPhantomJS"
        ]
    }
}
