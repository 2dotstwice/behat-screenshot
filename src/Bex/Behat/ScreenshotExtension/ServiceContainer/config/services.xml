<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="bex.screenshot_extension.configuration_parameters" class="Bex\Behat\ScreenshotExtension\Config\Parameters" />

        <service id="bex.screenshot_extension.filesystem" class="Symfony\Component\Filesystem\Filesystem" />
        <service id="bex.screenshot_extension.output_printer" class="Behat\Testwork\Output\Printer\ConsoleOutputPrinter" />
        <service id="bex.screenshot_extension.curl_client" class="Buzz\Client\Curl" />
        
        <service id="bex.screenshot_extension.screenshot_taker" class="Bex\Behat\ScreenshotExtension\Mink\ScreenshotTaker" public="false">
            <argument type="service" id="mink" />
            <argument type="service" id="bex.screenshot_extension.output_printer" />
            <argument type="service" id="bex.screenshot_extension.image_driver.current" />
        </service>

        <service id="bex.screenshot_extension.step_filename_generator" class="Bex\Behat\ScreenshotExtension\String\StepFilenameGenerator" public="false" />

        <service id="bex.screenshot_extension.screenshot_listener" class="Bex\Behat\ScreenshotExtension\Listener\ScreenshotListener" public="false">
            <tag name="event_dispatcher.subscriber" priority="0"/>
            <argument type="service" id="bex.screenshot_extension.screenshot_taker" />
            <argument type="service" id="bex.screenshot_extension.step_filename_generator" />
        </service>

        <!-- image drivers -->
        <service id="bex.screenshot_extension.image_driver.local" class="Bex\Behat\ScreenshotExtension\Driver\Local">
            <argument type="service" id="bex.screenshot_extension.filesystem" />
            <argument type="service" id="bex.screenshot_extension.configuration_parameters" />
        </service>

        <service id="bex.screenshot_extension.image_driver.upload_pie" class="Bex\Behat\ScreenshotExtension\Driver\UploadPie">
            <argument type="service" id="bex.screenshot_extension.curl_client" />
            <argument type="service" id="bex.screenshot_extension.configuration_parameters" />
        </service>

        <service id="bex.screenshot_extension.image_driver.unsee" class="Bex\Behat\ScreenshotExtension\Driver\Unsee">
            <argument type="service" id="bex.screenshot_extension.curl_client" />
            <argument type="service" id="bex.screenshot_extension.configuration_parameters" />
        </service>
    </services>
</container>
